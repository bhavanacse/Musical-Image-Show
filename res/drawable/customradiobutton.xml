<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
          android:drawable="@drawable/apptheme_btn_radio_on_focused_holo_light" /> <!-- checked -->
    <item android:state_checked="false"
          android:drawable="@drawable/apptheme_btn_radio_off_focused_holo_light" /> <!-- unchecked -->
    <item android:state_pressed="true"
          android:drawable="@drawable/apptheme_btn_radio_on_focused_holo_light" /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/apptheme_btn_radio_on_focused_holo_light" /> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/apptheme_btn_radio_on_focused_holo_light" /> <!-- hovered -->
    <item android:drawable="@drawable/apptheme_btn_radio_on_focused_holo_light" /> <!-- default -->
</selector>