<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
       <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/blue6"
                android:endColor="@color/blue4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/blue2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/blue4"
                android:startColor="@color/blue3"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/blue4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/blue5"
                android:startColor="@color/blue5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/blue7" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
