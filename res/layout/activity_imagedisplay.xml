<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.bhavmayyin.musicalimageshow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
 <TextView
    	android:id="@+id/ssTitle"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_centerHorizontal="true"
    	android:text="@string/app_name"
    	android:textStyle="bold"
    	android:textColor="#0099CC" />
    
    	
    <GridView
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="350dip"
        android:layout_weight="0.42"
        android:columnWidth="100dip"
        android:layout_below="@+id/ssTitle"
        android:gravity="center"
        android:horizontalSpacing="5dip"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dip">

    </GridView>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
    	android:id="@+id/imagenote"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_centerHorizontal="true"
    	android:layout_above="@+id/addImageButton"
    	android:text="Press any image above for 1-2 seconds to delete"
    	android:textStyle="bold"
    	android:textColor="#0099CC" />
    
    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custombutton"
        android:onClick="onClick"
        android:src="@drawable/ic_action_new" />
    
    <ImageButton
        android:id="@+id/playImageButton"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/custombutton"
        android:onClick="onClick"
        android:src="@drawable/ic_action_play" />

    </RelativeLayout>
    
</RelativeLayout>