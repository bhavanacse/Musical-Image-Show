<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.bhavmayyin.musicalimageshow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ssTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="#0099CC"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="350dip"
        android:layout_below="@+id/ssTitle"
        android:layout_weight="0.42"
        android:columnWidth="100dip"
        android:gravity="center"
        android:horizontalSpacing="5dip"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dip">
    </GridView>

    <TextView
        android:id="@+id/imagenote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/row1"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Press any image above for 1-2 seconds to delete"
        android:textColor="#0099CC"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/addImageButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="0.4"
            android:background="@drawable/custombutton"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_new" />

        <ImageButton
            android:id="@+id/playImageButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="0.4"
            android:background="@drawable/custombutton"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_play" />
    </LinearLayout>

</RelativeLayout>