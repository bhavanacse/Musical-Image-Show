<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.bhavmayyin.musicalimageshow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <TextView
    	android:id="@+id/ssMTitle"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_centerHorizontal="true"
    	android:text="@string/app_name"
    	android:textStyle="bold"
    	android:textColor="#0099CC" />
    
    <ListView
        android:id="@+id/musicListView"
        android:layout_width="fill_parent"
        android:layout_below="@+id/ssMTitle"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice"
    	android:descendantFocusability="beforeDescendants"
        android:fadingEdge="none"
        android:cacheColorHint="#000000"
    	android:divider="#0099CC"	
    	android:dividerHeight="3px">

    </ListView>
 	<TextView
    	android:id="@+id/musicnote"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_centerHorizontal="true"
    	android:layout_above="@+id/rowm1"
    	android:text="Press any music file above for 1-2 seconds to delete"
    	android:textStyle="bold"
    	android:textColor="#0099CC"  />
 	
    <LinearLayout
    android:id="@+id/rowm1"
    android:layout_alignParentBottom="true"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/blankMusicButton"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:gravity="center_horizontal"
            android:layout_weight="0.6"
            android:clickable="false"
            android:enabled="false"
            android:scaleType="fitEnd"
            android:background="@drawable/custombutton"  />
    
    <ImageButton
        android:id="@+id/addMusicButton"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:gravity="center_horizontal"
            android:layout_weight="0.2"
            android:scaleType="fitCenter"
        	android:background="@drawable/custombutton"
	        android:onClick="onClick"
	        android:src="@drawable/ic_action_new" />
 
    <ImageButton
        android:id="@+id/playMusicButton"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
	        android:background="@drawable/custombutton"
	        android:onClick="onClick"
	        android:src="@drawable/ic_action_play" />
     
</LinearLayout>
   
 
</RelativeLayout>