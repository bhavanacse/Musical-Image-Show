<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.bhavmayyin.musicalimageshow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/musicListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ssMTitle"
        android:cacheColorHint="#000000"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        android:divider="#0099CC"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:scrollbarAlwaysDrawVerticalTrack="true" >
    </ListView>

    <TextView
        android:id="@+id/musicnote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rowm1"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:text="** Long Press to delete   "
        android:textColor="#999999"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rowm1"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/addMusicButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="0.4"
            android:background="@drawable/custombutton"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_add_to_queue" />

        <ImageButton
            android:id="@+id/playMusicButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="0.4"
            android:background="@drawable/custombutton"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_slideshow" />
    </LinearLayout>

</RelativeLayout>