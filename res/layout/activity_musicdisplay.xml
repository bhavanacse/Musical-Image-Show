<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.bhavmayyin.musicalimageshow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ssMTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="#0099CC"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/musicListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ssMTitle"
        android:cacheColorHint="#000000"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        android:divider="#0099CC"
        android:dividerHeight="3px"
        android:fadingEdge="none"
        android:soundEffectsEnabled="true"
        android:animationCache="true"
        android:animateLayoutChanges="true" >
    </ListView>

    <TextView
        android:id="@+id/musicnote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rowm1"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Press any music file above for 1-2 seconds to delete"
        android:textColor="#0099CC"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rowm1"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/addMusicButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="0.5"
            android:background="@drawable/custombutton"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_new" />

        <!--
    <Button
        android:id="@+id/blankMusicButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:gravity="center_horizontal"
            android:layout_weight="0.2"
            android:clickable="false"
            android:enabled="false"
            android:scaleType="fitEnd"
            android:background="@drawable/custombutton"  />
        -->

        <ImageButton
            android:id="@+id/playMusicButton"
            android:layout_width="0dip"
            android:layout_height="44dip"
            android:layout_weight="0.5"
            android:background="@drawable/custombutton"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_play" />
    </LinearLayout>

</RelativeLayout>